<Page
    x:Class="Snapper.Views.Frames.LandingPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Snapper.Views.Frames"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Loaded="Page_Loaded">

    <Grid Background="#171717">
        <Pivot Name="pv">
            <PivotItem Margin="0,-48,0,0">
                <Grid>
                    <Image Name="BackgroundImage" VerticalAlignment="Center" Stretch="UniformToFill"/>

                    <Grid VerticalAlignment="Center">
                        <Grid Name="TitleBlur"/>
                        <StackPanel Orientation="Horizontal" Margin="0,30" HorizontalAlignment="Center">
                            <Image Source="/Images/SnapperLogo.png" Height="50" Margin="0,0,7,0"/>
                            <TextBlock Text="Snapper" FontFamily="Segoe UI" FontSize="30" Foreground="White" Margin="0,3,0,0"/>
                        </StackPanel>
                    </Grid>
                </Grid>
            </PivotItem>
        </Pivot>
    </Grid>
</Page>
